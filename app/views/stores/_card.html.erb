<div class="card mb-3">
  <h2 class="card-header h4">
    Store #<%= store.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Store name</dt>
      <dd><%= store.store_name %></dd>

      <dt>Location</dt>
      <dd><%= store.location %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back store, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_store_url(store), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to store, method: :delete, data: { confirm: "Do you really want to delete this store?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(store.updated_at) %> ago
  </div>
</div>
