<%= form_with(model: @store_inventory, local: true) do |f| %>

  <%= f.hidden_field :store_id, value: @store.id %>

  <div class="form-group">
    <%= f.label :price %>

    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :ingredient_id %>

    <%= f.collection_select :ingredient_id, SpiritsBrand.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create store inventory", class: "btn btn-block btn-outline-secondary" %>
<% end %>
