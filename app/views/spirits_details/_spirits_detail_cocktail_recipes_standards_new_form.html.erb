<!-- Form cocktail_recipes_standard start -->
<%= form_with(model: @cocktail_recipes_standard, local: true) do |f| %>
<!-- Form cocktail_recipes_standard end -->

  <!-- Label and input for cocktail_id start -->
  <div class="form-group">
    <%= f.label :cocktail_id %>

    <!-- Input for cocktail_id start -->
    <%= f.collection_select :cocktail_id, CocktailDetail.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for cocktail_id end -->
  </div>
  <!-- Label and input for cocktail_id end -->

  <!-- Label and input for ingredient_id start -->
  <!-- Input for ingredient_id start -->
  <%= f.hidden_field :ingredient_id, value: @spirits_detail.id %>
  <!-- Input for ingredient_id end -->
  <!-- Label and input for ingredient_id end -->

  <!-- Label and input for quantity start -->
  <div class="form-group">
    <%= f.label :quantity %>

    <!-- Input for quantity start -->
    <%= f.text_field :quantity, class: "form-control" %>
    <!-- Input for quantity end -->
  </div>
  <!-- Label and input for quantity end -->

  <%= f.submit "Create cocktail recipes standard", class: "btn btn-block btn-outline-secondary" %>
<% end %>
