<%= form_with(model: @spirits_brand, local: true) do |f| %>

  <%= f.hidden_field :spirit_id, value: @spirits_detail.id %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>

    <%= f.text_field :description, class: "form-control" %>
  </div>

  <%= f.submit "Create spirits brand", class: "btn btn-block btn-outline-secondary" %>
<% end %>
