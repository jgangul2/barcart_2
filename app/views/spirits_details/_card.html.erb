<div class="card mb-3">
  <h2 class="card-header h4">
    Spirits Detail #<%= spirits_detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= spirits_detail.name %></dd>
      <!-- Display name end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back spirits_detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link spirits_detail start -->
      <div class="col">
        <%= link_to edit_spirits_detail_url(spirits_detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link spirits_detail end -->

      <!-- Delete link spirits_detail start -->
      <div class="col">
        <%= link_to spirits_detail, method: :delete, data: { confirm: "Do you really want to delete this spirits_detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link spirits_detail end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(spirits_detail.updated_at) %> ago
  </div>
</div>
