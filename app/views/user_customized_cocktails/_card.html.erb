<div class="card mb-3">
  <h2 class="card-header h4">
    User Customized Cocktail #<%= user_customized_cocktail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @user_customized_cocktail.user.present? %>
          <%= link_to user_customized_cocktail.user, user_customized_cocktail.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>Cocktail</dt>
      <!-- Display cocktail_id start -->
      <dd>
        <% if @user_customized_cocktail.cocktail.present? %>
          <%= link_to user_customized_cocktail.cocktail, user_customized_cocktail.cocktail %>
        <% end %>
      </dd>
      <!-- Display cocktail_id end -->

      <dt>Ingredient</dt>
      <!-- Display ingredient_id start -->
      <dd>
        <% if @user_customized_cocktail.ingredient.present? %>
          <%= link_to user_customized_cocktail.ingredient, user_customized_cocktail.ingredient %>
        <% end %>
      </dd>
      <!-- Display ingredient_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back user_customized_cocktail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link user_customized_cocktail start -->
      <div class="col">
        <%= link_to edit_user_customized_cocktail_url(user_customized_cocktail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link user_customized_cocktail end -->

      <!-- Delete link user_customized_cocktail start -->
      <div class="col">
        <%= link_to user_customized_cocktail, method: :delete, data: { confirm: "Do you really want to delete this user_customized_cocktail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link user_customized_cocktail end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(user_customized_cocktail.updated_at) %> ago
  </div>
</div>
