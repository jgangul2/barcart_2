<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Customized Cocktails

    <a data-toggle="collapse" href="#cocktail_detail_user_customized_cocktails_new_form">
      Add user customized cocktail
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @cocktail_detail.user_customized_cocktails.each do |user_customized_cocktail| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to user_customized_cocktail, user_customized_cocktail %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to user_customized_cocktail, method: :delete, data: { confirm: "Do you really want to delete this user_customized_cocktail" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="cocktail_detail_user_customized_cocktails_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "cocktail_details/cocktail_detail_user_customized_cocktails_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
