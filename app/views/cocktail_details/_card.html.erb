<div class="card mb-3">
  <h2 class="card-header h4">
    Cocktail Detail #<%= cocktail_detail.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= cocktail_detail.name %></dd>

      <dt>Description</dt>
      <dd><%= cocktail_detail.description %></dd>

      <dt>Image url</dt>
      <dd>
        <%= cl_image_tag @cocktail_detail.image_url, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back cocktail_detail, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_cocktail_detail_url(cocktail_detail), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to cocktail_detail, method: :delete, data: { confirm: "Do you really want to delete this cocktail_detail?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(cocktail_detail.updated_at) %> ago
  </div>
</div>
