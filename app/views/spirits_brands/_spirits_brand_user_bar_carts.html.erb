<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Bar Carts

    <a data-toggle="collapse" href="#spirits_brand_user_bar_carts_new_form">
      Add user bar cart
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @spirits_brand.user_bar_carts.each do |user_bar_cart| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to user_bar_cart, user_bar_cart %>

        <%= link_to user_bar_cart, method: :delete, data: { confirm: "Do you really want to delete this user_bar_cart" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="spirits_brand_user_bar_carts_new_form">
        <%= render partial: "spirits_brands/spirits_brand_user_bar_carts_new_form" %>
      </div>
    </div>

  </ul>
</div>
