<div class="card mb-3">
  <h2 class="card-header h4">
    Spirits Brand #<%= spirits_brand.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Spirit</dt>
      <dd>
        <% if @spirits_brand.spirit.present? %>
          <%= link_to spirits_brand.spirit, spirits_brand.spirit %>
        <% end %>
      </dd>

      <dt>Name</dt>
      <dd><%= spirits_brand.name %></dd>

      <dt>Description</dt>
      <dd><%= spirits_brand.description %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back spirits_brand, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_spirits_brand_url(spirits_brand), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to spirits_brand, method: :delete, data: { confirm: "Do you really want to delete this spirits_brand?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(spirits_brand.updated_at) %> ago
  </div>
</div>
