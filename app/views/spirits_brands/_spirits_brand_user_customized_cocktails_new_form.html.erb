<!-- Form user_customized_cocktail start -->
<%= form_with(model: @user_customized_cocktail, local: true) do |f| %>
<!-- Form user_customized_cocktail end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <%= f.label :user_id %>

    <!-- Input for user_id start -->
    <%= f.text_field :user_id, class: "form-control" %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for cocktail_id start -->
  <div class="form-group">
    <%= f.label :cocktail_id %>

    <!-- Input for cocktail_id start -->
    <%= f.text_field :cocktail_id, class: "form-control" %>
    <!-- Input for cocktail_id end -->
  </div>
  <!-- Label and input for cocktail_id end -->

  <!-- Label and input for ingredient_id start -->
  <!-- Input for ingredient_id start -->
  <%= f.hidden_field :ingredient_id, value: @spirits_brand.id %>
  <!-- Input for ingredient_id end -->
  <!-- Label and input for ingredient_id end -->

  <%= f.submit "Create user customized cocktail", class: "btn btn-block btn-outline-secondary" %>
<% end %>
