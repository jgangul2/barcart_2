<div class="card mb-3">
  <h2 class="card-header h4">
    Cocktail Favorites User #<%= cocktail_favorites_user.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <!-- Display user_id start -->
      <dd>
        <% if @cocktail_favorites_user.user.present? %>
          <%= link_to cocktail_favorites_user.user, cocktail_favorites_user.user %>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>Cocktail</dt>
      <!-- Display cocktail_id start -->
      <dd>
        <% if @cocktail_favorites_user.cocktail.present? %>
          <%= link_to cocktail_favorites_user.cocktail, cocktail_favorites_user.cocktail %>
        <% end %>
      </dd>
      <!-- Display cocktail_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back cocktail_favorites_user, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link cocktail_favorites_user start -->
      <div class="col">
        <% if current_user == @cocktail_favorites_user.user %>
          <%= link_to edit_cocktail_favorites_user_url(cocktail_favorites_user), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Edit link cocktail_favorites_user end -->

      <!-- Delete link cocktail_favorites_user start -->
      <div class="col">
        <% if current_user == @cocktail_favorites_user.user %>
          <%= link_to cocktail_favorites_user, method: :delete, data: { confirm: "Do you really want to delete this cocktail_favorites_user?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
      <!-- Delete link cocktail_favorites_user end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(cocktail_favorites_user.updated_at) %> ago
  </div>
</div>
