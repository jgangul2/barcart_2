<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    User Customized Cocktails

    <a data-toggle="collapse" href="#user_user_customized_cocktails_new_form">
      Add user customized cocktail
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.user_customized_cocktails.each do |user_customized_cocktail| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to user_customized_cocktail, user_customized_cocktail %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_user_customized_cocktails_new_form">
        <%= render partial: "users/user_user_customized_cocktails_new_form" %>
      </div>
    </div>

  </ul>
</div>
